<main>
  <p id="notice"><%= flash[:notice] %></p>
  
   <% if @review.errors.any? %>
    <%= @review.errors.count %>errors prohibited this obj from being saved:
      <ul>
       <% @review.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
   <% end %> 

 <div class='container px-5 px-sm-0'>
    

     <div class='col-md-8 offset-md-1'>
        <h2>Reviews</h2>
        
        <table class='table table-hover table-inverse'>
        
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Reviews</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
               <td><%= link_to attachment_image_tag(review.user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "default-image.jpg"), user_path(review.user) %></td>
               <td><%= link_to review.title, review_path(review) %></td>
               <td><%= review.body %></td>
            <% end %>
              </tr>
          </tbody>
        
        </table>

      </div>
 </div>
</main>    