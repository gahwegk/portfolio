<main>

 <div class="container">
 
  <p id="notice"><%= flash[:notice] %></p>


 <% if @review.errors.any? %>
   <%= @review.errors.count %> errors prohibited this obj from being saved:
    <ul>
     <% @review.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
 <% end %>
 
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
  <h2>Editing Review</h2>
  <%= form_with model:@review, local:true do |f| %>
    <div>
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <div class="form-controll"><%= f.text_field :title, autofocus: true, id:"inputTitle", style: 'width:100%' %></div>
      </div>
  
      <div class="form-group">
        <label for="inputReview">Review</label>
        <div class="form-controll" ><%= f.text_area :review, autofocus: true, id:"inputReview", rows: '10', style:'width:100%' %></div>
      </div>
      
      <div class="form-group">
        <label for="inputYoutubeUrl">YoutubeURL</label>
        <div class="form-controll"><%= f.text_field :media_url, autofocus: true, id:"inputYoutubeUrl", style:'width:100%' %></div>
      </div>
      
      <div class="form-group">
      <%= f.label :category %>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :categoryname) do |category| %> 
        <%= category.label do %>
          <%= category.check_box %>
          <%= category.text %>
        <% end %>
      <% end %>
    </div>
  
      <div class="form-group">
           <input type="submit" name="commit" value="Update Review" class="btn btn-secondary" data-disable-with="Update Review" /> </div>
      </div>
    
     <div>
      <%= link_to "Back", reviews_path %>
      <% end %>
     </div>
     
      </div>
    </div>
  </div>

</main>