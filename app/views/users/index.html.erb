<main>
 
  <div class='container', user: @user>
   <p id="notice"><%= flash[:notice] %></p>
   <div class='offset-md-1'>
     <h2>Users</h2>
    
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @users.each do |user| %>
             <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "default-image.jpg") %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            <% end %>
             </tr>
          </tbody>
        </table>
       <%= paginate @users %>
    </div>
   </div>
</main>    