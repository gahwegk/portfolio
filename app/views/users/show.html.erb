<main>
 <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
  
  <%= render 'layouts/userinfo' %>


    <div class='col-md-8 offset-md-1'>
      <h2>Reviews</h2>
        <table class='table table-hover table-inverse'>
          
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          <tbody>
            <% @reviews.each do |review| %>
            <tr>
              <td><%=link_to attachment_image_tag(@user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "default-image.jpg"), user_path(@user) %></td>
              <td><%= link_to review.title, review_path(review.id) %></</td>
              <td><%= review.body %></td>
            <% end %>
            </tr>
          </tbody>
        
        </table>
    </div>
  </div>
</main>